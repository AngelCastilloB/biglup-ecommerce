{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true
  },
  "filesGlob": [
    "components/**/*.ts",
    "directives/**/*.ts",
    "biglup-ui.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
